<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<Mission xmlns="http://ProjectMalmo.microsoft.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <About>
    <Summary>Testarena: Capture the flag </Summary>
  </About>
  <ModSettings>
        <MsPerTick>100</MsPerTick>
  </ModSettings>
  <ServerSection>
    <ServerInitialConditions>
        <Time>
            <StartTime>1000</StartTime>
            <AllowPassageOfTime>false</AllowPassageOfTime>
        </Time>
        <Weather>clear</Weather>
    </ServerInitialConditions>
    <ServerHandlers>
      <FlatWorldGenerator generatorString="3;10*7,3*3,30*1,3*1:1,2;1"/>
       <DrawingDecorator>
                    <!-- coordinates for cuboid are inclusive -->
                    <DrawCuboid x1="0" y1="46" z1="0" x2="15" y2="50" z2="15" type="air" />
                    <!-- walls of arena -->
                    <DrawCuboid x1="16"  y1="45" z1="-2"  x2="16" y2="46" z2="16" type="bedrock" />
                    <DrawCuboid x1="-1"  y1="45" z1="-1"  x2="-1" y2="46" z2="16" type="bedrock" />
                    <DrawCuboid x1="-1"  y1="45" z1="-1"  x2="16" y2="46" z2="-1" type="bedrock" />
                    <DrawCuboid x1="-1"  y1="45" z1="15"  x2="16" y2="46" z2="15" type="bedrock" />
                    <!-- floor -->
                    <DrawCuboid x1="0"  y1="45" z1="0"  x2="15" y2="45" z2="15" type="sandstone" />
                    <!-- base 01: Tom -->
                    <DrawCuboid x1="12"  y1="45" z1="0"  x2="15" y2="45" z2="3" type="iron_ore" />
                    <DrawCuboid x1="15" y1="46" z1="0" x2="15" y2="60" z2="0" type="emerald_block" />
                    <DrawCuboid x1="14"  y1="46" z1="0"  x2="15" y2="47" z2="1" type="coal_ore" /><!-- flag -->
                    <!-- <DrawCuboid x1="12" y1="46" z1="3" x2="12" y2="46" z2="3" type="lapis_block" /> Ziel Tom-->
                    <!-- base 02: Jerry -->
                    <DrawCuboid x1="0"  y1="45" z1="11"  x2="3" y2="45" z2="15" type="gold_ore" />
                    <DrawCuboid x1="0" y1="46" z1="14" x2="0" y2="60" z2="14" type="redstone_block" />
                    <DrawCuboid x1="0"  y1="46" z1="13"  x2="1" y2="47" z2="14" type="log" /><!-- flag -->
                    <!-- <DrawCuboid x1="3" y1="46" z1="11" x2="3" y2="46" z2="11" type="lapis_block" /> Ziel Jerry-->
                    <!-- maze -->
                    <DrawCuboid x1="1"  y1="45" z1="2"  x2="1" y2="46" z2="4" type="bedrock" />
                    <DrawCuboid x1="2"  y1="45" z1="4"  x2="4" y2="46" z2="4" type="bedrock" />
                    <DrawCuboid x1="9"  y1="45" z1="2"  x2="9" y2="46" z2="5" type="bedrock" />
                    <DrawCuboid x1="8"  y1="45" z1="8"  x2="12" y2="46" z2="8" type="bedrock" />
                    <DrawCuboid x1="6"  y1="45" z1="6"  x2="6" y2="46" z2="12" type="bedrock" />
        </DrawingDecorator>
    </ServerHandlers>
  </ServerSection>

  <AgentSection mode="Survival">
    <Name>Tom</Name>
    <AgentStart>
      <Placement x="11.5"  y="46" z="2.5" pitch="0" yaw="0"/>
      <Inventory>
      </Inventory>
    </AgentStart>
    <AgentHandlers>
      <ObservationFromFullInventory flat="false"/>
      <DiscreteMovementCommands/>
      <ObservationFromDiscreteCell/>
	  <ObservationFromFullStats/>
      <ObservationFromRay/>
      <VideoProducer want_depth="false">
        <Width>400</Width>
        <Height>300</Height>
      </VideoProducer>
      <RewardForTouchingBlockType>
		<Block reward="20.0" type="sandstone" behaviour="onceOnly"/>
        <Block reward="-10.0" type="iron_ore" behaviour="onceOnly"/>
        <Block reward="1000.0" type="gold_ore" behaviour="onceOnly"/>
        <Block reward="-10.0" type="bedrock" behaviour="constant"/>
        <Block reward="100000.0" type="log" behaviour="onceOnly"/>
        <Block reward="-10000.0" type="coal_ore" behaviour="onceOnly"/>
      </RewardForTouchingBlockType>
      <RewardForSendingCommand reward="-5" />
        <RewardForCollectingItem>
          <Item reward="-3000" type="bedrock"/>
          <Item reward="-3000" type="coal_ore"/>
          <Item reward="10000" type="log"/>
      </RewardForCollectingItem>
        <AgentQuitFromReachingPosition>
           <Marker tolerance="0.5" x="11" y="47" z="0"/>
            <Marker tolerance="0.5" x="11" y="47" z="1"/>
            <Marker tolerance="0.5" x="11" y="47" z="2"/>
            <Marker tolerance="0.5" x="11" y="47" z="3"/>
            <Marker tolerance="0.5" x="11" y="47" z="4"/>
            <Marker tolerance="0.5" x="12" y="47" z="0"/>
            <Marker tolerance="0.5" x="12" y="47" z="1"/>
            <Marker tolerance="0.5" x="12" y="47" z="2"/>
            <Marker tolerance="0.5" x="12" y="47" z="3"/>
            <Marker tolerance="0.5" x="12" y="47" z="4"/>
            <Marker tolerance="0.5" x="13" y="47" z="1"/>
            <Marker tolerance="0.5" x="13" y="47" z="1"/>
            <Marker tolerance="0.5" x="13" y="47" z="2"/>
            <Marker tolerance="0.5" x="13" y="47" z="3"/>
            <Marker tolerance="0.5" x="13" y="47" z="4"/>
            <Marker tolerance="0.5" x="14" y="47" z="2"/>
            <Marker tolerance="0.5" x="14" y="47" z="3"/>
            <Marker tolerance="0.5" x="14" y="47" z="4"/>
            <Marker tolerance="0.5" x="15" y="47" z="2"/>
            <Marker tolerance="0.5" x="15" y="47" z="3"/>
            <Marker tolerance="0.5" x="15" y="47" z="4"/>
      </AgentQuitFromReachingPosition>
    </AgentHandlers>
  </AgentSection>

  <AgentSection mode="Survival">
    <Name>Jerry</Name>
    <AgentStart>
      <Placement x="2.5"  y="46" z="10.5" pitch="0" yaw="180"/>
      <Inventory>
      </Inventory>
    </AgentStart>
    <AgentHandlers>
      <ObservationFromFullInventory flat="false"/>
      <DiscreteMovementCommands/>
      <ObservationFromDiscreteCell/>
	  <ObservationFromFullStats/>
      <ObservationFromRay/>
      <VideoProducer want_depth="false">
        <Width>400</Width>
        <Height>300</Height>
      </VideoProducer>
      <RewardForTouchingBlockType>
		<Block reward="20.0" type="sandstone" behaviour="onceOnly"/>
        <Block reward="-10.0" type="gold_ore" behaviour="onceOnly"/>
        <Block reward="-10.0" type="bedrock" behaviour="constant"/>
        <Block reward="1000.0" type="iron_ore" behaviour="onceOnly"/>
        <Block reward="-10000.0" type="log" behaviour="onceOnly"/>
        <Block reward="10000.0" type="coal_ore" behaviour="onceOnly"/>
      </RewardForTouchingBlockType>
      <RewardForCollectingItem>
        <Item reward="-3000" type="bedrock"/>
        <Item reward="-3000" type="log"/>
        <Item reward="10000" type="coal_ore"/>
      </RewardForCollectingItem>
      <RewardForSendingCommand reward="-5" />
      <AgentQuitFromReachingPosition>
          <Marker tolerance="0.5" x="0" y="47" z="10"/>
          <Marker tolerance="0.5" x="0" y="47" z="11"/>
          <Marker tolerance="0.5" x="0" y="47" z="12"/>
          <Marker tolerance="0.5" x="1" y="47" z="10"/>
          <Marker tolerance="0.5" x="1" y="47" z="11"/>
          <Marker tolerance="0.5" x="1" y="47" z="12"/>
          <Marker tolerance="0.5" x="2" y="47" z="10"/>
          <Marker tolerance="0.5" x="2" y="47" z="11"/>
          <Marker tolerance="0.5" x="2" y="47" z="12"/>
          <Marker tolerance="0.5" x="2" y="47" z="13"/>
          <Marker tolerance="0.5" x="2" y="47" z="14"/>
          <Marker tolerance="0.5" x="3" y="47" z="10"/>
